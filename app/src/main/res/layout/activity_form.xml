<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".form"
    android:background="@drawable/backg"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BaBy Mart"
        android:textSize="30sp"
        android:layout_marginTop="45dp"
        android:gravity="center"
        android:textStyle="bold|normal|italic"
        android:textColor="@color/white"
        android:drawableLeft="@drawable/icons"
        android:paddingLeft="80dp"
        android:paddingRight="80dp"

        />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="38dp"
        app:cardUseCompatPadding="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="2"
                android:layout_marginTop="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_gravity="center"
                android:background="@drawable/log_curvesbg"
                >

                <TextView
                    android:id="@+id/login"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/log_curves"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"

                    android:text="@string/log_in"
                    android:textAlignment="center"
                    android:textColor="@color/dark_purple"
                    android:textSize="16sp"
                    android:textStyle="normal|bold"


                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/sign_up"
                    android:layout_weight="1"
                    android:text="sign up"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:textAlignment="center"
                    android:textColor="@color/dark_purple"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"
                    android:textSize="16sp"
                    android:textStyle="normal|bold"
                    android:background="@drawable/log_curvesright"
                    />
            </LinearLayout>
            <FrameLayout
                android:id="@+id/frame_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/loginlayout"
                android:background="@color/white"
                android:padding="25dp"
                android:gravity="center"
                >

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Welcome Here!"
                   android:textStyle="bold"
                   android:textSize="25dp"
                   android:textColor="@color/light_white"
                   />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="We are providing the every kind of baby product this mart will help to purchase the babies acceessories, we are happy to see you here with the journey of our mart!"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="italic"
                    />
            </LinearLayout>
            </FrameLayout>
            <TextView
                android:text="OR"
                android:textSize="18sp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:textStyle="normal"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#474646"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/facebook"
                    />
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/google"
                    />

            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>